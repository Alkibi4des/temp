<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".LonInActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#8064a2"
                android:gravity="center"
                android:text="로그인"
                android:textColor="#ffffff"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ccc1da"
                android:orientation="vertical"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:paddingTop="30dp">

                <EditText
                    android:id="@+id/EditId_JB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:hint="아이디"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/EditPwd_JB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="5dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:hint="비밀번호"
                    android:inputType="textPassword"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/BtnLogin_JB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="#403152"
                    android:text="로그인"
                    android:textColor="#ffffff"
                    android:textSize="25dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="The One Hotel의 회원이 되시면 \n다양한 정보와 혜택을 받을 수 있습니다."
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/ButtonGoingJoinFromLoginNh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_weight="2"
                    android:background="#e6b9b8"
                    android:gravity="center"
                    android:text="가입 하기"
                    android:textColor="#ffffff"
                    android:textSize="25dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <!--슬라이드 메뉴 레이아웃-->
    <LinearLayout
        android:id="@+id/slideMenu_login"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="#e6e0ec"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#b3a2c7"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textviewLoginState5"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="@drawable/textlines"
                android:gravity="center|left"
                android:text="로그인이 해주세요!"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#b3a2c7"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextViewGoingLoginFromLoginNh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:textColor="#953735"
                    android:textStyle="bold"
                    android:text="로그인" />

                <TextView
                    android:id="@+id/TextViewGoingJoinFromLoginNh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="가입" />

                <TextView
                    android:id="@+id/TextViewGoingCheckFromLoginNh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="예약 현황" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/TextViewGoingShowFromLoginNh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="The One"
            android:textColor="#000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/TextViewGoingRoomFromLoginNh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="객실 정보"
            android:textColor="#000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/TextViewGoingQuesFromLoginNh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="문의 사항"
            android:textColor="#000"
            android:textSize="15dp" />
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>