<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Join3Activity"
    android:id="@+id/drawerLayout_join">

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:text="가입"
        android:textSize="30dp"
        android:background="#8064a2"
        android:textColor="#ffffff"
        android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/congrat_join2"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/textlines2"
            android:layout_margin="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="더 많은 혜택을 찾아보세요!"
            android:textSize="25dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="객실 정보 게시판을 이용해 객실의 디테일을 살펴보세요.\n궁금한 점이 있으면, 문의사항 게시판에 질문을 남겨주세요."
            android:gravity="center"/>

        <Button
            android:id="@+id/buttonJoin3ComNh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="완료"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="50dp"
            android:background="#e6b9b8"
            android:textColor="#ffffff"
            android:textSize="25dp"
            />
    </LinearLayout>

</LinearLayout>
    <!--슬라이드 메뉴 레이아웃-->
<LinearLayout
android:id="@+id/slideMenu_join"
android:orientation="vertical"
android:layout_width="280dp"
android:layout_height="match_parent"
android:weightSum="100"
android:layout_gravity="end"
android:background="#e6e0ec"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#b3a2c7">
    <TextView
        android:id="@+id/textviewLoginState4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center|left"
        android:layout_margin="10dp"
        android:text="로그인이 해주세요!"
        android:textSize="15dp"
        android:background="@drawable/textlines"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#b3a2c7"
        >
        <TextView
            android:id="@+id/TextViewGoingLoginFromJoinNh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="로그인"/>
        <TextView
            android:id="@+id/TextViewGoingJoinFromJoinNh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textColor="#953735"
            android:textStyle="bold"
            android:text="가입"/>
        <TextView
            android:id="@+id/TextViewGoingCheckFromJoinNh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="예약 현황"/>
    </LinearLayout>
</LinearLayout>
<TextView
    android:id="@+id/TextViewGoingShowFromJoinNh"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:textSize="15dp"
    android:text="The One"
    android:textColor="#000"/>
<TextView
    android:id="@+id/TextViewGoingRoomFromJoinNh"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:textSize="15dp"
    android:text="객실 정보"
    android:textColor="#000"/>
<TextView
    android:id="@+id/TextViewGoingQuesFromJoinNh"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:textSize="15dp"
    android:text="문의 사항"
    android:textColor="#000"/>
</LinearLayout>
    </android.support.v4.widget.DrawerLayout>