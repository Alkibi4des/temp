<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout_ques"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".listView">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:background="#8064a2"
                android:gravity="center"
                android:text="문의 사항"
                android:textColor="#ffffff"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/numberTextViewSH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#f2dcdb"
                android:text="No"
                android:textAlignment="textStart"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/subTextViewSH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#f2dcdb"
                android:text="Subject"
                android:textAlignment="textStart"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/writerTextViewSH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#f2dcdb"
                android:text="Writer"
                android:textAlignment="textStart"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/dateTextViewSH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#f2dcdb"
                android:text="Date"
                android:textAlignment="textStart"
                android:textSize="17dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/textlines2" />
        </LinearLayout>

        <ListView
            android:id="@+id/listViewSH"
            android:layout_width="match_parent"
            android:layout_height="390dp" />

        <Button
            android:id="@+id/writeBtnSH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#403152"
            android:text="글 쓰기"
            android:textColor="#ffffff" />
    </LinearLayout>
    <!--슬라이드 메뉴 레이아웃-->
    <LinearLayout
        android:id="@+id/slideMenu_ques"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="#e6e0ec"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#b3a2c7"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textviewLoginState1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="@drawable/textlines"
                android:gravity="center|left"
                android:text="로그인이 해주세요!"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#b3a2c7"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextViewGoingLoginFromQuesNh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="로그인" />

                <TextView
                    android:id="@+id/TextViewGoingJoinFromQuesNh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="가입" />

                <TextView
                    android:id="@+id/TextViewGoingCheckFromQuesNh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="예약 현황" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/TextViewGoingShowFromQuesNh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="The One"
            android:textColor="#000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/TextViewGoingRoomFromQuesNh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="객실 정보"
            android:textColor="#000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/TextViewGoingQuesFromQuesNh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="문의 사항"
            android:textColor="#953735"
            android:textStyle="bold"
            android:textSize="15dp" />
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>