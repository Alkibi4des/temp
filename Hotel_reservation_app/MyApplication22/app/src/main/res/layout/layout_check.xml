<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout_check"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".CheckActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:background="#8064a2"
                android:gravity="center"
                android:text="예약 확인"
                android:textColor="#ffffff"
                android:textSize="30dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text=" 님의 예약 내역"
            android:id="@+id/tv_reservation_User_HB"
            android:gravity="center_horizontal"
            />
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lv_reservation_checkList_HB"
            >


        </ListView>


    </LinearLayout>
    <!--슬라이드 메뉴 레이아웃-->
    <LinearLayout
        android:id="@+id/slideMenu_check"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="#e6e0ec"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#b3a2c7"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textviewLoginState1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="@drawable/textlines"
                android:gravity="center|left"
                android:text="로그인이 해주세요!"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#b3a2c7"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextViewGoingLoginFromCheckNh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="로그인" />

                <TextView
                    android:id="@+id/TextViewGoingJoinFromCheckNh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="가입" />

                <TextView
                    android:id="@+id/TextViewGoingCheckFromCheckNh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:textColor="#953735"
                    android:textStyle="bold"
                    android:text="예약 현황" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/TextViewGoingShowFromCheckNh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="The One"
            android:textColor="#000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/TextViewGoingRoomFromCheckNh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="객실 정보"
            android:textSize="15dp"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/TextViewGoingQuesFromCheckNh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="문의 사항"
            android:textColor="#000"
            android:textSize="15dp" />
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>