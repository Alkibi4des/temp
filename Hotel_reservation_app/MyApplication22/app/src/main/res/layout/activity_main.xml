    <ImageView
        android:id="@+id/imageViewMain1_hj"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/main01"
        />

    <Gallery
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/galleryMain1"
        android:spacing="5dp"
        android:layout_gravity="bottom"
        >

    </Gallery>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#35ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="#88f2dcdb"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/spinnerForRoomNh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"></Spinner>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textViewForInYearNh"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:textSize="9dp"></TextView>

                            <TextView
                                android:id="@+id/textViewCheckIn_hj"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="CheckIn" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textViewForOutYearNh"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:textSize="9dp"></TextView>

                            <TextView
                                android:id="@+id/textViewCheckOut_hj"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="CheckOut" />
                        </LinearLayout>
                        <!---->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="10dp"
                                android:text="어른"
                                android:textSize="15dp" />

                            <Spinner
                                android:id="@+id/spinnerForAdultNh"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"></Spinner>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="명"
                                android:textSize="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="  아이"
                                android:textSize="15dp" />

                            <Spinner
                                android:id="@+id/spinnerForChildNh"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"></Spinner>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="명"
                                android:textSize="10dp" />
                        </LinearLayout>

                    </LinearLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="#604a7b"
                        android:text="Reservation"
                        android:textColor="#fff"
                        android:id="@+id/btn_main_reservation_HB">
                    </Button>



                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical"></LinearLayout>

        </LinearLayout>

    </FrameLayout>
    <!--슬라이드 메뉴 레이아웃-->
    <LinearLayout
        android:id="@+id/slideMenu"
        android:orientation="vertical"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:layout_gravity="end"
        android:background="#e6e0ec"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#b3a2c7">

            <TextView
                android:id="@+id/textviewLoginState1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center|left"
                android:layout_margin="10dp"
                android:text="로그인이 해주세요!"
                android:textSize="15dp"
                android:background="@drawable/textlines"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#b3a2c7"
                >
                <TextView
                    android:id="@+id/TextViewGoingLoginFromMainNh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="로그인"/>
                <TextView
                    android:id="@+id/TextViewGoingJoinFromMainNh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="가입"/>
                <TextView
                    android:id="@+id/TextViewGoingCheckFromMainNh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="예약 현황"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/TextViewGoingShowFromMainNh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="15dp"
            android:text="The One"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/TextViewGoingRoomFromMainNh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="15dp"
            android:text="객실 정보"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/TextViewGoingQuesFromMainNh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="15dp"
            android:text="문의 사항"
            android:textColor="#000"/>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>